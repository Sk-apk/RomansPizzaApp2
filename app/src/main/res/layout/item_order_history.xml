<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardOrder"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="2dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <!-- Order ID -->
        <TextView
            android:id="@+id/tvOrderId"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Order #123"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/text_primary"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/tvOrderStatus" />

        <!-- Status -->
        <TextView
            android:id="@+id/tvOrderStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Delivered"
            android:textSize="12sp"
            android:textStyle="bold"
            android:textColor="@color/success"
            android:padding="6dp"
            android:background="@drawable/bg_input_field"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Order Date -->
        <TextView
            android:id="@+id/tvOrderDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="12 Nov 2024, 14:30"
            android:textSize="12sp"
            android:textColor="@color/text_secondary"
            android:layout_marginTop="4dp"
            app:layout_constraintTop_toBottomOf="@id/tvOrderId"
            app:layout_constraintStart_toStartOf="parent" />

        <!-- Item Count -->
        <TextView
            android:id="@+id/tvItemCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3 items"
            android:textSize="14sp"
            android:textColor="@color/text_primary"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@id/tvOrderDate"
            app:layout_constraintStart_toStartOf="parent" />

        <!-- Total -->
        <TextView
            android:id="@+id/tvOrderTotal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="R 245.00"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/pizza_red"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@id/tvOrderDate"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Buttons -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnViewDetails"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:text="@string/view_details"
            android:textSize="12sp"
            style="@style/Widget.Material3.Button.OutlinedButton"
            app:cornerRadius="20dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="8dp"
            app:layout_constraintTop_toBottomOf="@id/tvItemCount"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/btnReorder"
            app:layout_constraintBottom_toBottomOf="parent" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnReorder"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:text="@string/reorder"
            android:textSize="12sp"
            style="@style/Widget.Material3.Button.TonalButton"
            app:cornerRadius="20dp"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/tvOrderTotal"
            app:layout_constraintStart_toEndOf="@id/btnViewDetails"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>