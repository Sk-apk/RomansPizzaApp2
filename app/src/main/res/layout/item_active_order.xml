<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardOrder"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="4dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <!-- Status Icon -->
        <TextView
            android:id="@+id/tvStatusIcon"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:text="ðŸš—"
            android:textSize="32sp"
            android:gravity="center"
            android:background="@drawable/bg_input_field"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <!-- Order ID -->
        <TextView
            android:id="@+id/tvOrderId"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Order #123"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/text_primary"
            android:layout_marginStart="12dp"
            app:layout_constraintTop_toTopOf="@id/tvStatusIcon"
            app:layout_constraintStart_toEndOf="@id/tvStatusIcon"
            app:layout_constraintEnd_toStartOf="@id/tvOrderTotal" />

        <!-- Order Date -->
        <TextView
            android:id="@+id/tvOrderDate"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="2 mins ago"
            android:textSize="12sp"
            android:textColor="@color/text_secondary"
            android:layout_marginStart="12dp"
            android:layout_marginTop="4dp"
            app:layout_constraintTop_toBottomOf="@id/tvOrderId"
            app:layout_constraintStart_toEndOf="@id/tvStatusIcon"
            app:layout_constraintEnd_toStartOf="@id/tvOrderTotal" />

        <!-- Order Total -->
        <TextView
            android:id="@+id/tvOrderTotal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="R 245.00"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/pizza_red"
            app:layout_constraintTop_toTopOf="@id/tvOrderId"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Status Label -->
        <TextView
            android:id="@+id/tvOrderStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Out for Delivery"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="@color/status_delivering"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/tvStatusIcon"
            app:layout_constraintStart_toStartOf="parent" />

        <!-- Progress Bar -->
        <ProgressBar
            android:id="@+id/progressBar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="0dp"
            android:layout_height="8dp"
            android:progress="60"
            android:progressTint="@color/status_delivering"
            android:progressBackgroundTint="@color/text_hint"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@id/tvOrderStatus"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/tvProgress" />

        <!-- Progress Text -->
        <TextView
            android:id="@+id/tvProgress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="60%"
            android:textSize="12sp"
            android:textStyle="bold"
            android:textColor="@color/text_primary"
            android:layout_marginStart="8dp"
            app:layout_constraintTop_toTopOf="@id/progressBar"
            app:layout_constraintBottom_toBottomOf="@id/progressBar"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Track Order Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnTrackOrder"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text="@string/track_order"
            android:textSize="14sp"
            android:backgroundTint="@color/pizza_red"
            app:cornerRadius="24dp"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/progressBar"
            app:layout_constraintBottom_toBottomOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>