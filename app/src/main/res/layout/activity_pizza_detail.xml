<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@color/background_light">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Header -->
        <RelativeLayout
            android:id="@+id/layoutHeader"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:background="@drawable/bg_gradient"
            app:layout_constraintTop_toTopOf="parent">

            <ImageButton
                android:id="@+id/btnBack"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_margin="16dp"
                android:background="@color/overlay_dark"
                android:src="@android:drawable/ic_menu_close_clear_cancel"
                app:tint="@color/background_light"
                android:contentDescription="Back" />

            <TextView
                android:id="@+id/tvPizzaIcon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="ðŸ•"
                android:textSize="80sp" />

        </RelativeLayout>

        <!-- Pizza Info -->
        <TextView
            android:id="@+id/tvPizzaName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Margherita"
            android:textSize="28sp"
            android:textStyle="bold"
            android:textColor="@color/text_primary"
            android:padding="16dp"
            app:layout_constraintTop_toBottomOf="@id/layoutHeader" />

        <TextView
            android:id="@+id/tvPizzaDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Classic tomato, mozzarella &amp; fresh basil"
            android:textSize="14sp"
            android:textColor="@color/text_secondary"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            app:layout_constraintTop_toBottomOf="@id/tvPizzaName" />

        <TextView
            android:id="@+id/tvBasePrice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Base Price: R 75.50"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/pizza_red"
            android:padding="16dp"
            app:layout_constraintTop_toBottomOf="@id/tvPizzaDescription" />

        <!-- Size Selection -->
        <TextView
            android:id="@+id/tvSizeLabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Choose Size"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/text_primary"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:paddingTop="8dp"
            app:layout_constraintTop_toBottomOf="@id/tvBasePrice" />

        <RadioGroup
            android:id="@+id/rgSize"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:paddingTop="8dp"
            app:layout_constraintTop_toBottomOf="@id/tvSizeLabel" />

        <!-- Crust Selection -->
        <TextView
            android:id="@+id/tvCrustLabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Choose Crust"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/text_primary"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:paddingTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/rgSize" />

        <RadioGroup
            android:id="@+id/rgCrust"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:paddingTop="8dp"
            app:layout_constraintTop_toBottomOf="@id/tvCrustLabel" />

        <!-- Toppings Selection -->
        <TextView
            android:id="@+id/tvToppingsLabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Add Toppings (Optional)"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/text_primary"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:paddingTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/rgCrust" />

        <LinearLayout
            android:id="@+id/layoutToppings"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:paddingTop="8dp"
            app:layout_constraintTop_toBottomOf="@id/tvToppingsLabel" />

        <!-- Total & Add to Cart -->
        <LinearLayout
            android:id="@+id/layoutBottom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp"
            android:background="@color/background_light"
            android:elevation="8dp"
            android:gravity="center_vertical"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/layoutToppings"
            app:layout_constraintBottom_toBottomOf="parent">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Total Price"
                    android:textSize="12sp"
                    android:textColor="@color/text_secondary" />

                <TextView
                    android:id="@+id/tvTotalPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="R 75.50"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:textColor="@color/pizza_red" />

            </LinearLayout>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnAddToCart"
                android:layout_width="wrap_content"
                android:layout_height="56dp"
                android:text="Add to Cart"
                android:textSize="16sp"
                android:backgroundTint="@color/pizza_red"
                app:cornerRadius="28dp"
                android:paddingStart="32dp"
                android:paddingEnd="32dp" />

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>
